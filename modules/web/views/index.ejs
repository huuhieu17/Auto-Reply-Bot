<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <!-- // todo  message error and alert-->
                        <div class="table-responsive">
                            <!-- // responsive -->
                            <% if (messages !='' ) { %>
                                <table class="table table-striped">

                                    <thead>
                                        <tr style="background-color: #ffdb93;">
                                            <th>ID</th>
                                            <th>Question</th>
                                            <th>Answer</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% messages.forEach((row, index)=> { %>
                                            <tr style="background-color: #ffffff;">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td>
                                                    <%= row.question %>
                                                </td>
                                                <td>
                                                    <%= row.answer %>
                                                </td>
                                                <td>
                                                  <a href="/edit/<%= row._id %> " class="text-success"><i
                                                          class="fas fa-edit fa-lg mx-1"></i></a>
                                                  <a href="/delete/<%= row._id %>" class="text-success"><i
                                                          class="fas fa-trash fa-lg mx-1"></i></a>
                                              </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>

                                </table>

                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No messages found in the database</h1>
                                    <% } %>

                        </div>
            </div>
        </div>

    </div>

    <%- include('layout/footer') %>