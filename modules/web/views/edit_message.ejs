<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-3">
            </div>

            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light my-2">Update Question (<%= message.question %> )</h3>
                    </div>

                    <div class="card-body p-4">
                        <form action="/edit/<%= message._id %> " method="POST" id="add-form">

                            <div class="mb-3">
                                <label for="question">question</label>
                                <input type="text" name="question" class="form-control form-control-lg"
                                    placeholder="Enter question" value="<%= message.question %>" required />
                            </div>

                            <div class="mb-3">
                                <label for="answer">Answer</label>
                                <input type="text" name="answer" class="form-control form-control-lg"
                                    placeholder="Enter answer" value="<%= message.answer %>" required />
                            </div>
                         
                            <div class="mb-3 d-grid gap-2">
                                <!-- <button class="btn btn-primary" type="button">Button</button> -->
                                <input type="submit" value="Update message" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <%- include('layout/footer') %>